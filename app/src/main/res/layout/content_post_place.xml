<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activitys.PostPlace"
    tools:showIn="@layout/activity_post_place">

    <TextView
        android:layout_width="match_parent"
        android:text="Lugar visitado"
        android:layout_height="wrap_content" />
    <EditText
        android:hint="Places"
        android:id="@+id/edtplaces"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:text="Nivel de Peligro"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/edtpeligro"
        android:hint="Nivel de peligro "
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>